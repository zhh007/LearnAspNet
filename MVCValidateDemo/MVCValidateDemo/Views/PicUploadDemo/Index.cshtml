@model MVCValidateDemo.Models.PicUploadDemoModel
@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .qq-upload-list {
        display: none;
    }

    .qq-upload-button {
        background-color: transparent;
        width: 80px;
        height: 80px;
    }
</style>

@section scripts{
    <script src="~/assets/fileupload/jquery.fineuploader-3.0.min.js"></script>
    <script src="~/Scripts/updatepic.js"></script>
    <link href="~/assets/lightbox/css/lightbox.css" rel="stylesheet" />
    <script src="~/assets/lightbox/js/lightbox.min.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="page-header fn-clear">
            <h2 class="col-md-10">图片上传</h2>
            <div class="col-md-2 text-right">
                @*<a onclick="goback()" class="btn btn-danger" style="margin-top: 25px;">返回</a>*@
            </div>
        </div>
    </div>
</div>
<div class="form-wrapper">
    <div class="row">
        <div class="col-lg-8 col-md-9 col-sm-11">
            @using (Html.BeginForm("Index", "PicUploadDemo", FormMethod.Post, new { @id = "form1", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(p => p.PhotoFolderId)
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        图片<span style="color: #F00">*</span>
                    </label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-12 form-control-static">添加图片。</div>
                        </div>
                        @if (Model.Photos != null)
                        {
                            var len = Model.Photos.Count;
                            <div class="speed-panel picupload" id="Gain">
                                @{ var index = 0; }
                                @foreach (var item in Model.Photos)
                                {
                                    <div class="speed-main">
                                        <div class="speed-img">
                                            <a href="@item.ThumbPath" data-lightbox="roadtrip">
                                                <img src="@item.ThumbPath">
                                            </a>
                                        </div>
                                        <div class="speed-del">
                                            <a href="javascript:;" onclick="deletePic(this, 'Gain')">
                                                <i class="fa fa-minus-circle fa-lg">
                                                </i>
                                            </a>
                                        </div>
                                        <input type="hidden" class='filename' value="raw" name="@string.Format("{0}FileName{1}", "Gain", index)" />
                                    </div>
                                    index++;
                                }
                                @if (len < 1)
                                {
                                    <div class="speed-main" id="btnGain">
                                        <a href="#">
                                            <div class="lent">
                                            </div>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="speed-main " style="display: none;" id="btnGain">
                                        <a href="#">
                                            <div class="lent">
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                                    }
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-primary" id="frm-submit">保存</button>
                        <button type="button" class="btn btn-default" onclick="goback()">取消</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        init9PicUploader("@Model.PhotoFolderId", "btnGain", '@Href("~/Help/PicUpload_9")', "Gain", 9);

        $("#frm-submit").click(function (evt) {
            var frmObj = $("#form1");
            $.validator.unobtrusive.parse(frmObj);
            var fvalid = check();
            var fvalid2 = frmObj.valid();
            if (fvalid && fvalid2) {
                $.post('@Href("~/PicUploadDemo/Index")'
                    , frmObj.serialize()
                    , function (data) {
                        ajaxAlert(data);
                        if (data.success) {
                            goback();
                        }
                    }
                    , "json"
                );
            }
            evt.preventDefault();
        });
    });

    function check() {
        var success = true;

        //addError("FixedMode", "请输入上课规律。");

        return success;
    }

    function goback() {
        location = '@Href("~/PicUploadDemo/")';
    }
</script>


